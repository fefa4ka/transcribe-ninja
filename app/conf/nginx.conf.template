upstream django {
    server unix:///home/%(EC2_SERVER_USERNAME)s/%(PROJECT_NAME)s/app/wsgi.sock; # взаимодействие с uwsgi через Unix-сокет (мы воспользуемся этим вариантом позже) 
}

# конфигурация веб-сервера
server {
    listen      80;
    # доменное имя
    server_name     %(DOMAIN)s; # замените на собственный домен или IP адрес
    charset     utf-8;

    # максимальный размер загружаемых на сервер данных
    client_max_body_size 75M;  
    
    # обслуживание статики
    location /static {
        alias /home/%(EC2_SERVER_USERNAME)s/%(PROJECT_NAME)/static;  # расположение статики (при необходимости измените)

    }

    location /assets {
        alias /home/%(EC2_SERVER_USERNAME)s/%(PROJECT_NAME)s/frontend/bin/assets;
    }

    # Остальные запросы перенаправляются в Django приложение
    location ~ ^/(admin|api)/ {
        uwsgi_pass  django;
        include     /home/%(EC2_SERVER_USERNAME)s/%(PROJECT_NAME)s/app/conf/uwsgi_params; 
    }

    location / {
        root /home/%(EC2_SERVER_USERNAME)s/%(PROJECT_NAME)s/frontend/bin/;  
    }
}

